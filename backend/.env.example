# Environment
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/checkin

# Redis (for Bull Queue / Distributed Job Processing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# API
API_VERSION=1
API_PREFIX=api
# Check-in Settings
CHECKIN_LATE_THRESHOLD_MINUTES=10

# Session Scheduler
AUTO_OPEN_MINUTES_BEFORE=10
SESSION_CHECK_INTERVAL_MS=30000
AUTO_END_ENABLED=true
AUTO_END_GRACE_MINUTES=0